<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sample_on_boarding_nav"
    app:startDestination="@id/sampleSplashFragment">

    <fragment
        android:id="@+id/sampleSplashFragment"
        android:name="com.haya.android_no_mori.ui.sample.onboarding.SampleSplashFragment"
        android:label="fragment_sanple_splash"
        tools:layout="@layout/fragment_sample_splash" >
        <action
            android:id="@+id/action_splashFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/sampleHomeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.haya.android_no_mori.ui.sample.onboarding.viewpager.ViewPagerFragment"
        android:label="fragment_sample_on_boarding"
        tools:layout="@layout/fragment_sample_on_boarding" >

        <action
            android:id="@+id/action_viewPagerFragment_to_homeFragment"
            app:destination="@id/sampleHomeFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/sampleHomeFragment"
        android:name="com.haya.android_no_mori.ui.sample.onboarding.SampleHomeFragment"
        android:label="fragment_sample_home"
        tools:layout="@layout/fragment_sample_home" />
</navigation>